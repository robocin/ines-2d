---
Checks: >
  -*,
  abseil-*,
  boost-*,
  bugprone-*,
  cert-*, -cert-err33-c,
  clang-analyzer-*,
  concurrency-*,
  darwin-*,
  google-*,
  linuxkernel-*,
  llvm-*, -llvm-header-guard, -llvm-include-order,
  misc-*,
  modernize-*, -modernize-use-trailing-return-type,
  mpi-*,
  openmp-*,
  performance-*,
  portability-*,
  readability-*, -readability-identifier-length

WarningsAsErrors: >
  *,
  -cert-err58-cpp,
  -readability-magic-numbers

CheckOptions:
  # bugprone-assert-side-effect:
  - key: bugprone-assert-side-effect.AssertMacros
    value: "assert"
  # bugprone-misplaced-widening-cast:
  - key: bugprone-misplaced-widening-cast.CheckImplicitCasts
    value: true
  # cppcoreguidelines-avoid-do-while:
  - key: cppcoreguidelines-avoid-do-while.IgnoreMacros
    value: true
  # cppcoreguidelines-init-variables:
  - key: cppcoreguidelines-init-variables.IncludeStyle
    value: "google"
  - key: cppcoreguidelines-init-variables.MathHeader
    value: "<cmath>"
  # cppcoreguidelines-narrowing-conversions
  - key: cppcoreguidelines-narrowing-conversions.PedanticMode
    value: true
  # misc-const-correctness
  - key: misc-const-correctness.WarnPointersAsValues
    value: true
  - key: misc-const-correctness.TransformPointersAsValues
    value: true
  # misc-non-private-member-variables-in-classes
  - key: misc-non-private-member-variables-in-classes.IgnoreClassesWithAllMemberVariablesBeingPublic
    value: true
  # misc-uniqueptr-reset-release
  - key: misc-uniqueptr-reset-release.IncludeStyle
    value: "google"

  # readability-identifier-naming
  # * namespace:
  - key: readability-identifier-naming.NamespaceCase
    value: camelBack

  # readability-magic-numbers:
  - key: readability-magic-numbers.IgnorePowersOf2IntegerValues
    value: true
  - key: readability-magic-numbers.IgnoreUserDefinedLiterals
    value: true

  # * class:
  - key: readability-identifier-naming.ClassIgnoredRegexp
    value: "^(const_)?([a-zA-Z0-9_]*)(_t|_?type|_?iterator|_?pointer|_?reference)$"
  - key: readability-identifier-naming.ClassConstantCase
    value: camelBack
  - key: readability-identifier-naming.ClassMemberCase
    value: camelBack
  - key: readability-identifier-naming.ClassMethodCase
    value: camelBack

  # * enum:
  - key: readability-identifier-naming.EnumCase
    value: camelBack
  - key: readability-identifier-naming.EnumConstantCase
    value: camelBack
  - key: readability-identifier-naming.EnumConstantPrefix
    value: e
  - key: readability-identifier-naming.ScopedEnumConstantCase
    value: camelBack

  # * function:
  - key: readability-identifier-naming.FunctionCase
    value: camelBack

  # * global:
  - key: readability-identifier-naming.GlobalConstantCase
    value: camelBack
  - key: readability-identifier-naming.GlobalConstantIgnoredRegexp
    value: "^[a-z][a-zA-Z0-9]*_v$"

  # * local constant:
  - key: readability-identifier-naming.LocalConstantCase
    value: camelBack
  - key: readability-identifier-naming.LocalConstantIgnoredRegexp
    value: "^k([A-Z][a-z0-9]+)(([0-9])|([A-Z0-9][a-z0-9]+))*([A-Z])?$"

  # constexpr variable:
  - key: readability-identifier-naming.ConstexprVariableCase
    value: camelBack

  # * macro:
  - key: readability-identifier-naming.MacroDefinitionCase
    value: UPPER_CASE

  # * method:
  - key: readability-identifier-naming.MethodCase
    value: camelBack

  # * parameter:
  - key: readability-identifier-naming.ParameterCase
    value: camelBack
  - key: readability-identifier-naming.ParameterPackCase
    value: camelBack
  - key: readability-identifier-naming.ConstantParameterCase
    value: camelBack

  # * template:
  - key: readability-identifier-naming.TemplateParameterCase
    value: camelBack

  # * type alias:
  - key: readability-identifier-naming.TypeAliasCase
    value: camelBack
  - key: readability-identifier-naming.TypeAliasIgnoredRegexp
    value: "^(const_)?([a-zA-Z0-9_]*)(_t|_?type|_?iterator|_?pointer|_?reference)$"

  # * union:
  - key: readability-identifier-naming.UnionCase
    value: camelBack

  # * variable:
  - key: readability-identifier-naming.VariableCase
    value: camelBack